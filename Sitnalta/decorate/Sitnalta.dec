				else if (levelbehavior > 0 && user_monsterlevel > 60) { A_ChangeFlag("AVOIDMELEE",1); A_SetTics(5); }

				if (levelbehavior > 0) { user_fastchaseextra = user_monsterlevel/9; }
				user_fastchasechance = 16 + user_fastchaseextra + user_painfastchase;
				if (random(1,256) <= user_fastchasechance) { A_Chase("Melee","Missile",CHF_FASTCHASE); } else { A_Chase; }
				user_painfastchase = 0;
			}
			Loop
		Missile:
			TNT1 A 0 ACS_NamedExecuteAlways("RefreshStealthInfo",0,1) // makes a Stealth Monster become more visible
			TNT1 A 0 A_PlaySound("thor/attack")
