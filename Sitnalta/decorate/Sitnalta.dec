			}
			THOR S 5
			{
				if (levelbehavior > 0 && user_monsterlevel > 180) { A_SetTics(3); }
				else if (levelbehavior > 0 && user_monsterlevel > 90) { A_SetTics(4); }
				A_FaceTarget;
			}
			THOR T 5 BRIGHT
			{
				if (levelbehavior > 0 && user_monsterlevel > 180) { A_SetTics(3); }
				else if (levelbehavior > 0 && user_monsterlevel > 90) { A_SetTics(4); }

				if (levelbehavior > 0 && user_monsterlevel > 240)
				{
					A_CustomMissile("LightningBallL",32,0,8,2,0);
					A_CustomMissile("LightningBallL",32,0,0,2,0);
					A_CustomMissile("LightningBallL",32,0,-8,2,0);
				}
				else
				if (levelbehavior > 0 && user_monsterlevel > 120)
				{
					A_CustomMissile("LightningBallL",32,0,8,2,0);
					A_CustomMissile("LightningBallL",32,0,-8,2,0);
				}
				else
				{
					A_CustomMissile("LightningBallL",32,0,0,2,0);
				}
			}
			THOR T 5
			{
				if (levelbehavior > 0 && user_monsterlevel > 180) { A_SetTics(3); }
				else if (levelbehavior > 0 && user_monsterlevel > 90) { A_SetTics(4); }
			}
			Goto See
		//attack 2; lightning streams
		LightningStream:
			THOR RST 5 
			{
				if (levelbehavior > 0 && user_monsterlevel > 180) { A_SetTics(3); }
				else if (levelbehavior > 0 && user_monsterlevel > 90) { A_SetTics(4); }
				A_FaceTarget;
			}
			THOR TTTTTT 1 BRIGHT
