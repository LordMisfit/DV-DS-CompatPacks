				A_CrisisSpawnProjectile("LightningRod1", "LightningRod1Crisis", 55, 45, 0, CMF_OFFSETPITCH|CMF_BADPITCH, 0);
				A_CrisisSpawnProjectile("LightningRod1", "LightningRod1Crisis", 55, -45, 0, CMF_OFFSETPITCH|CMF_BADPITCH, 0);
				if (levelbehavior > 0 && user_monsterlevel > 120) 
