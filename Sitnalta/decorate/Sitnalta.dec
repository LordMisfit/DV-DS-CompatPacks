					A_CustomMissile("GroundLightningTracer",0,random(-20,20),random(-45,45),0,0);
					A_CustomMissile("GroundLightningTracer",0,random(-20,20),random(-45,45),0,0);
					A_CustomMissile("GroundLightningTracer",0,random(-20,20),random(-45,45),0,0);
				}
				A_FaceTarget;
			}
			THOR X 8 Bright
			{
				if (levelbehavior > 0 && user_monsterlevel > 240) { A_SetTics(4); }
